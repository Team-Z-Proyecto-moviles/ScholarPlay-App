<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewmodel"
            type="com.example.scholarplay.ui.levelscore.LevelScoreViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/black">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="32dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/medium_gap"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/deepblue"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/corner_radius"
                    android:layout_marginVertical="@dimen/medium_gap">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="@dimen/small_gap"
                        android:paddingStart="80dp"
                        android:paddingEnd="80dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/level_label"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:fontFamily="@font/urbanist_medium"/>
                    </FrameLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/task_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.level.name}"
                    android:layout_marginVertical="@dimen/medium_gap"
                    android:fontFamily="@font/urbanist_light"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_task_label"
                    android:layout_marginVertical="@dimen/small_gap"
                    android:fontFamily="@font/urbanist_medium"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/grade_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not graded yet"
                    android:fontFamily="@font/urbanist_regular"
                    android:textSize="34sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/medium_gap"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/small_gap"
                    >
                    <TextView
                        android:id="@+id/coins_text_view"
                        android:paddingHorizontal="@dimen/medium_gap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0"
                        android:fontFamily="@font/urbanist_medium"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/edu_coin" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/small_gap"
                    >
                    <TextView
                        android:id="@+id/xp_text_view"
                        android:paddingHorizontal="@dimen/medium_gap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0"
                        android:fontFamily="@font/urbanist_medium"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/xp" />


                </LinearLayout>




                <Button
                    android:id="@+id/ok_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:fontFamily="@font/urbanist_medium"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/big_gap">

                </Button>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>