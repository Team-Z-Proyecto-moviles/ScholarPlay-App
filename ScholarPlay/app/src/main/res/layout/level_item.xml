<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_centerHorizontal="true"
        android:id="@+id/cardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#BAD1E9"
        app:cardCornerRadius="50dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/level_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:fontFamily="@font/urbanist_medium"
            android:textColor="@color/white"
            android:layout_gravity="center">

        </TextView>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_marginTop="35dp"
        android:layout_width="105.75dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/platform2">

    </ImageView>

    <!-- Diseña el contenido interno del CardView según tus necesidades -->
    <!-- Por ejemplo, puedes agregar una imagen, texto, etc. -->



</RelativeLayout>