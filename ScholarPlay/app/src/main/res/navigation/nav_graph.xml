<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment3">
    <fragment
        android:id="@+id/loginFragment3"
        android:name="com.example.scholarplay.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment3_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_loginFragment3_to_teacherHomeFragment"
            app:destination="@id/teacherHomeFragment" />
        <action
            android:id="@+id/action_loginFragment3_to_studentActivity2"
            app:destination="@id/studentActivity2" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.scholarplay.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment3"
            app:destination="@id/loginFragment3"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/teacherHomeFragment"
        android:name="com.example.scholarplay.ui.homepage.teacher.TeacherHomeFragment"
        android:label="TeacherHomeFragment" >
        <action
            android:id="@+id/action_teacherHomeFragment_to_createAClassFragment"
            app:destination="@id/createAClassFragment"
            app:enterAnim="@anim/slide_in_up" />
    </fragment>
    <fragment
        android:id="@+id/createAClassFragment"
        android:name="com.example.scholarplay.ui.createclass.CreateAClassFragment"
        android:label="fragment_create_a_class"
        tools:layout="@layout/fragment_create_a_class" >
        <action
            android:id="@+id/action_createAClassFragment_to_teacherHomeFragment"
            app:destination="@id/teacherHomeFragment" />
    </fragment>
    <activity
        android:id="@+id/studentActivity2"
        android:name="com.example.scholarplay.ui.StudentActivity"
        android:label="StudentActivity" />
</navigation>